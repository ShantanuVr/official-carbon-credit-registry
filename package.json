{
  "name": "official-registry-sim",
  "version": "1.0.0",
  "description": "Official Carbon Credit Registry Simulator",
  "private": true,
  "workspaces": [
    "api",
    "ui"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter api dev\" \"pnpm --filter ui dev\"",
    "build": "pnpm --filter api build && pnpm --filter ui build",
    "db:migrate": "pnpm --filter api db:migrate",
    "db:seed:all": "pnpm --filter api db:seed:all",
    "test": "pnpm --filter api test && pnpm --filter ui test",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "lint": "pnpm --filter api lint && pnpm --filter ui lint",
    "type-check": "pnpm --filter api type-check && pnpm --filter ui type-check"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
