{
  "name": "@official-registry-sim/api",
  "version": "1.0.0",
  "description": "Official Carbon Credit Registry API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "prisma migrate dev",
